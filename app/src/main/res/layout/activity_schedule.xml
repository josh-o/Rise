<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.atrui.rise3.scheduleActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <DatePicker
            android:id="@+id/datePicker1"
            android:layout_width="500dp"
            android:layout_height="250dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="98dp"
            android:layout_marginTop="185dp" />

        <TextView
            android:id="@+id/textViewSchedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/datePicker1"
            android:layout_alignStart="@+id/datePicker1"
            android:layout_marginBottom="78dp"
            android:layout_marginStart="40dp"
            android:text="TextView"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/textViewSchedule2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textViewSchedule"
            android:layout_alignTop="@+id/datePicker1"
            android:text="TextView"
            android:textSize="16dp" />

        <Button
            android:id="@+id/viewSchedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/datePicker1"
            android:layout_below="@+id/datePicker1"
            android:layout_marginEnd="13dp"
            android:text="View Schedule" />

    </RelativeLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="130dp"
        android:layout_height="63dp"
        android:layout_marginTop="68dp"
        android:text="Schedule"
        android:textSize="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
