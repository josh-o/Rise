<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.atrui.rise3.mainMenu">

    <ImageButton
        android:id="@+id/orderButton"
        android:layout_width="400dp"
        android:layout_height="250dp"
        android:layout_marginStart="212dp"
        android:layout_marginTop="164dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ordering" />

    <ImageButton
        android:id="@+id/revenueButton"
        android:layout_width="400dp"
        android:layout_height="250dp"
        android:layout_marginBottom="60dp"
        android:layout_marginEnd="212dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/revenue" />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/frameLayout"
            android:layout_alignEnd="@+id/frameLayout"
            app:srcCompat="@drawable/rise"
            tools:layout_editor_absoluteX="132dp"
            tools:layout_editor_absoluteY="0dp" />

    </FrameLayout>

    <ImageButton
        android:id="@+id/inventoryButton"
        android:layout_width="400dp"
        android:layout_height="250dp"
        android:layout_marginBottom="60dp"
        android:layout_marginStart="212dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/inventory" />

    <ImageButton
        android:id="@+id/scheduleButton"
        android:layout_width="400dp"
        android:layout_height="250dp"
        android:layout_marginEnd="212dp"
        android:layout_marginTop="164dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/scheduling" />
</android.support.constraint.ConstraintLayout>
